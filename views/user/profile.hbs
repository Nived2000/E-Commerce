<div id="particles-js" class="snow"></div>
<link rel="stylesheet" href="/styles/profile.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="container mt-5">
    <div class="row d-flex flex-wrap">
        <!-- Profile and Add Address -->
        <div class="d-flex flex-column flex-lg-row w-100 mb-3">
            <!-- Left Column: Profile -->
            <div class="card mb-3 flex-grow-1">
                <div class="card-header bg-primary text-white">
                    <h5>User Profile</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Name:</strong>
                        <span id="user-name">{{user.name}}</span>
                    </div>
                    <div class="mb-3">
                        <strong>Email:</strong>
                        <span id="user-email">{{user.email}}</span>
                    </div>
                    <div class="mb-3">
                        <strong>Phone Number:</strong>
                        <span id="user-phone">{{user.phone}}</span>
                    </div>
                    <a href="/user/editProfile"><button class="btn btn-primary mt-1 mb-3">Edit Profile</button></a>
                    <div class="mb-3">
                        <strong>Addresses:</strong>
                        <div id="user-addresses">
                            {{#each user.address}}
                            <div class="d-flex align-items-center mb-2">
                                <div>
                                    <strong>â€¢</strong> {{this.line1}}, {{this.city}}, {{this.state}}, {{this.zipCode}}
                                </div>
                                <a href="/user/editAddress/{{this._id}}">
                                    <button class="btn btn-sm btn-secondary ml-3">Edit</button>
                                </a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Add Address -->
            <div class="card mb-3 flex-grow-1 ml-lg-3">
                <div class="card-header bg-secondary text-white">
                    <h5>Add New Address</h5>
                </div>
                <div class="card-body">
                    <form id="add-address-form" method="post" action="/user/profile">
                        <div class="form-group">
                            <label for="address-line-1">Address Line 1</label>
                            <input type="text" class="form-control" name="line1" id="address-line-1"
                                placeholder="Enter Address Line 1" required>
                        </div>
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" class="form-control" name="city" id="city" placeholder="Enter City"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="state">State</label>
                            <input type="text" class="form-control" name="state" id="state" placeholder="Enter State"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="country">Country</label>
                            <input type="text" class="form-control" name="country" id="country"
                                placeholder="Enter Country" required>
                        </div>
                        <div class="form-group">
                            <label for="zip">ZIP Code</label>
                            <input type="text" class="form-control" name="zipCode" id="zip" placeholder="Enter ZIP Code"
                                required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Address</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Order History -->
        <div class="card w-100">
            <div class="card-header bg-primary text-white">
                <h5>Order History</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Number of Products</th>
                                <th>Payment Status</th>
                                <th>Delivery Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                            <tr>
                                <td>{{this._id}}</td>
                                <td>{{this.createdAt}}</td>
                                <td>{{this.products.length}}</td>
                                <td>{{this.paymentMethod}}</td>
                                <td>{{this.deliveryStatus}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" value="{{message}}" id="message">

<script>
    const message = document.getElementById('message').value;
    if (message) {
        Swal.fire({
            icon: 'info',
            text: message
        });
    }
</script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
