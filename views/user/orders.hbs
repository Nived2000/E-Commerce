<link rel="stylesheet" href="/styles/orders.css">
<link rel="stylesheet" href="/styles/profile.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="card w-100 shadow-lg rounded">
    <div class="card-header bg-primary text-white text-center">
        <h5 class="mb-0">Order History</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead class="thead-light text-center">
                    <tr>
                        <th>Sl. No</th>
                        <th>Date</th>
                        <th>Number of Products</th>
                        <th>Payment Method</th>
                        <th>Total Amount</th>
                        <th>Coupon Discount</th>
                        <th>Wallet Used</th>
                        <th>Delivery Status</th>
                        <th>Actions</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td class="text-center">{{increment @index}}</td>
                        <td class="text-center">{{formatDate this.createdAt "MM-DD-YYYY"}}</td>
                        <td class="text-center">{{this.products.length}}</td>
                        <td class="text-center">{{this.paymentMethod}}</td>
                        <td class="text-center">{{this.orderAmount}} ₹</td>
                        <td class="text-center">{{this.couponDiscount}} ₹</td>
                        <td class="text-center">{{this.walletAmount}} ₹</td>
                        <td class="text-center">
                            <span class=" 
                {{#if (eq this.deliveryStatus " In Transit")}}{{else if (eq
                                this.deliveryStatus "Order Cancelled" )}}{{else}} {{/if}}">
                                {{#if (eq this.deliveryStatus "Order Cancelled")}}
                                Order Cancelled
                                {{else}}
                                {{this.deliveryStatus}}
                                {{/if}}
                            </span>
                        </td>
                        {{#switch this.deliveryStatus}}
                        {{#case "In Transit"}}
                        <td class="text-center">
    <a href="/user/delete-order/{{this._id}}" class="cancel-order-btn d-inline-flex justify-content-center">
        <button class="btn text-white btn-sm">Cancel Order</button>
    </a>
</td>

                        {{/case}}
                        {{#case "Order Cancelled"}}
                        <td class="text-center">
                            <span class="text-muted">Order Cancelled</span>
                        </td>
                        {{/case}}
                        {{#default}}
                        <td class="text-center">
                            <a href="#" class="rate-order-btn">
                                <button class="btn btn-primary btn-sm">Rate Order</button>
                            </a>
                        </td>
                        {{/default}}
                        {{/switch}}
                        <td>
    <a href="/user/order-details/{{this.orderId}}">
        <button class="btn btn-warning btn-sm d-inline-flex align-items-center px-3 py-2 rounded-3 shadow-sm view-details-btn">
            <i class="bi bi-eye me-1"></i> View Details
        </button>
    </a>
</td>

                    </tr>
                    {{/each}}


                </tbody>
            </table>
        </div>
    <div class="pagination-container">
    {{#if previousPage}}
        <a href="/user/orders?page={{previousPage}}&limit={{limit}}" class="btn btn-sm btn-outline-primary pagination-btn">Previous</a>
    {{/if}}
    
    <span class="pagination-info">Page {{page}} of {{totalPages}}</span>

    {{#if nextPage}}
        <a href="/user/orders?page={{nextPage}}&limit={{limit}}" class="btn btn-sm btn-outline-primary pagination-btn">Next</a>
    {{/if}}

    <!-- Add option to go to the next page directly -->
    {{#if nextPage}}
        <a href="/user/orders?page={{nextPage}}&limit={{limit}}" class="btn btn-sm btn-outline-warning pagination-btn">Go to Next Page</a>
    {{/if}}
</div>

        

        <input type="hidden" value="{{message}}" id="message">
    </div>
</div>
<script>
    const message = document.getElementById('message').value;
    if (message) {
        Swal.fire({
            icon: 'info',
            text: message
        });
    }

    document.querySelectorAll(".cancel-order-btn").forEach(function (link) {
        link.addEventListener("click", function (event) {
            event.preventDefault(); // Prevent default navigation

            const deleteUrl = this.href; // Get the URL from the anchor tag

            // SweetAlert confirmation dialog
            Swal.fire({
                title: "Are you sure?",
                text: "Do you want to cancel this order?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, remove it!",
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to the delete URL if confirmed
                    window.location.href = deleteUrl;
                }
            });
        });
    });

</script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>