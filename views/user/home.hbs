<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">categories</span></h2>
    <div class="row px-xl-5 pb-3">
        <!-- Loop through categories dynamically -->
        {{#each categories}}
    <div class="col-lg-3 col-md-4 col-sm-6 pb-4">
    <div class="card shadow-sm border-0 rounded overflow-hidden mb-4">
        <!-- Category Image Section -->
        <div class="position-relative">
            <!-- Image -->
            <img 
                src="/img/{{this.image}}" 
                alt="{{this.category}}" 
                class="img-fluid" 
                id="category-images"
                
            >
            
            <!-- Stylish Button -->
            <a href="/user/category/{{this.categoryId}}" 
               class="btn btn-warning position-absolute text-dark font-weight-bold stylish-button" 
               >
                Shop Now
            </a>
        </div>
        
        <!-- Category Name -->
        <div class="card-body text-center bg-light">
            <h5 class="font-weight-bold m-0 text-dark">{{this.category}}</h5>
        </div>
    </div>
</div>


{{/each}}

