<div class="container my-5">
    <h2 class="text-center add-product">ADD DISCOUNT</h2>
    <form action="/admin/postDiscount/{{category.categoryId}}" method="POST" class="product-form">
        <div class="form-group mb-4">
        <label for="discount" class="text-white">Discount (%):</label>
        <input type="number" id="discount" name="discount" class="form-control" placeholder="Enter discount" required>
      </div>
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-warning">Add discount</button>
      </div>
    </form>
</div>

<script>
  document.querySelector('.product-form').addEventListener('submit', function (event) {
    const discountInput = document.getElementById('discount');
    const discountValue = parseInt(discountInput.value, 10);

    // Validate that the input is a number between 1 and 100
    if (isNaN(discountValue) || discountValue < 1 || discountValue > 100) {
      // Prevent form submission
      event.preventDefault();

      // Show error alert using SweetAlert
      Swal.fire({
        icon: 'error',
        title: 'Invalid Discount',
        text: 'Please enter a discount between 1% and 100%.',
        confirmButtonColor: '#ffc800',
      });
      return false;
    }
  });
</script>