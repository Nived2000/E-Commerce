<!-- User Table -->
<div class="container mt-4">
    <div class="table-heading text-center">
    <h2 class="text-uppercase">User Management</h2>
    
  </div>
  <table class="table table-bordered custom-table">
    <thead>
      <tr>
        <th scope="col">Sl. No</th>
        <th scope="col">Username</th>
        <th scope="col">Email ID</th>
        <th scope="col">Created At</th>
        <th scope="col">Blocked Status</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <th scope="row">{{@index }}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.createdAt}}</td>
        {{#if this.isBlocked}}
        <td>Access Blocked</td>
        {{else}}
        <td>Access Allowed</td>
        {{/if}}
        {{#if this.isBlocked}}
        
        <td>
  <button 
    class="btn btn-sm btn-outline-success" 
    onclick="confirmUnblockUser('{{this.userId}}')" 
    data-bs-toggle="tooltip" 
    data-bs-placement="top" 
    >
    Unblock
  </button>
</td>
{{else}}
<td>
  <button 
    class="btn btn-sm btn-outline-danger" 
    onclick="confirmBlockUser('{{this.userId}}')" 
    data-bs-toggle="tooltip" 
    data-bs-placement="top" 
    title="Block this user">
    Block User
  </button>
</td>

{{/if}}
      </tr>
      {{/each}}
    </tbody>
  </table>
  <input id="message" value="{{message}}" type="hidden">
</div>

<script>
  const message = document.getElementById('message').value;

  // Show SweetAlert message if it exists
  if (message) {
    Swal.fire({
      icon: 'info',
      title: 'Note',
      text: message,
    });
  }

  

  function confirmBlockUser(userId) {
    Swal.fire({
      title: 'Are you sure?',
      text: "You will be able to undo this action!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#ffc800',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, block them!',
      cancelButtonText: 'Cancel'
    }).then((result) => {
      if (result.isConfirmed) {
        // Redirect to the block user route
        window.location.href = `/admin/blockUser/${userId}`;
      }
    });
  }
  function confirmUnblockUser(userId) {
    Swal.fire({
      title: 'Are you sure?',
      text: "You will be able to undo this action!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#ffc800',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, Unblock them!',
      cancelButtonText: 'Cancel'
    }).then((result) => {
      if (result.isConfirmed) {
        // Redirect to the unblock user route
        window.location.href = `/admin/unblockUser/${userId}`;
      }
    });
  }
</script>

