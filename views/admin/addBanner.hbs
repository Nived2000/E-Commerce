<!-- Add Product Form -->
  <div class="container my-5">
  <h2 class="text-center add-product">ADD BANNER</h2>
  <form action="/admin/addBanner" method="POST" class="product-form" enctype="multipart/form-data">
    <div class="form-group mb-4">
      <label for="name" class="text-white">Banner Name:</label>
      <input type="text" id="name" name="name" class="form-control" placeholder="Enter banner name" required>
    </div>

    <div class="form-group mb-4">
      <label for="name" class="text-white">Description:</label>
      <input type="text" id="name" name="description" class="form-control" placeholder="Enter a description" required>
    </div>

    <!-- New Input for Image -->
    <div class="form-group mb-4">
      <label for="image" class="text-white">Upload Image:</label>
      <input type="file" id="image" name="image" class="form-control" accept="image/*" required>
    </div>

    <!-- Image Preview -->
    <div class="form-group mb-4">
      <label class="text-white">Image Preview:</label>
      <div id="imagePreview" class="text-center">
        <img id="previewImg" src="" alt="Image Preview" style="max-width: 200px; display: none;">
      </div>
    </div>

    <div class="d-grid gap-2">
      <button type="submit" class="btn btn-warning">Add Banner</button>
    </div>
  </form>
</div>
  <input id="message" value="{{message}}" type="hidden">
</div>
<script>
  const message = document.getElementById('message').value;

  // Show SweetAlert message if it exists
  if (message) {
    Swal.fire({
      icon: 'info',
      title: 'Note',
      text: message,
    });
  }

  const imageInput = document.getElementById('image');
  const previewImg = document.getElementById('previewImg');

  imageInput.addEventListener('change', function(event) {
    const file = event.target.files[0];
    if (file) {
      const reader = new FileReader();
      
      reader.onload = function(e) {
        previewImg.src = e.target.result;
        previewImg.style.display = 'block'; // Show the image
      };

      reader.readAsDataURL(file);
    } else {
      previewImg.style.display = 'none'; // Hide the image if no file is selected
    }
  });
</script>