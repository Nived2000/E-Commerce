<!-- Add User Section -->
<div class="d-flex flex-column align-items-center mt-4">

</div>

<!-- User Table -->
<div class="container mt-4">
  <div class="table-heading text-center">
    <h2 class="text-uppercase">ALL PRODUCTS</h2>

  </div>
  <table class="table table-bordered custom-table">
    <thead>
      <tr>
        <th scope="col">Sl. No</th>
        <th scope="col">Product Name</th>
        <th scope="col">Description</th>
        <th scope="col">Brand</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <th scope="row">{{@index }}</th>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.brand}}</td>
        <td>
  <a href="/admin/postProductToCategory?categoryId={{../categoryId}}&productId={{this.productId}}" 
     class="btn btn-sm btn-outline-success" 
     data-bs-toggle="tooltip" 
     data-bs-placement="top">
    Add Product to {{../category}}
  </a>
</td>



    

        {{/each}}
    </tbody>
  </table>
  <input id="message" value="{{message}}" type="hidden">
</div>

<!-- Centered Admin Logout Section -->
<div class="d-flex flex-column align-items-center mt-4">

  <a href="/admin/addProducts" class="btn btn-custom-yellow mt-2">Add Products</a>
</div>
<script>
  const message = document.getElementById('message').value

  if(message){
    Swal.fire({
            icon: 'info',      // Customize icon as needed
            text: message
        });
  }
</script>